<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/txt_day"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="start|center_vertical"
        android:text="@string/day_text_placeholder"
        android:textColor="@color/text_primary"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/img_forecast_day"
        style="@style/daily_forecast_img_day_1"
        android:contentDescription="@string/icon_placeholder_description"
        android:src="@drawable/ic_launcher_foreground" />

    <ImageView
        android:id="@+id/img_forecast_night"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:contentDescription="@string/icon_placeholder_description"
        android:src="@drawable/ic_launcher_foreground" />

    <ImageView
        android:id="@+id/img_rain"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:contentDescription="@string/icon_placeholder_description"
        android:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/txt_rain"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="start|center_vertical"
        android:text="@string/rain_percentage_placeholder"
        android:textColor="@color/text_primary"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/txt_temperature_day"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/temperature_degree_placeholder"
        android:textColor="@color/text_primary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_temperature_night"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/temperature_degree_placeholder"
        android:textColor="@color/text_primary"
        android:textSize="14sp" />


</LinearLayout>