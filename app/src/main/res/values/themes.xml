<resources>
    <!-- Base application theme. -->
    <style name="Theme.Sky" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/background_black</item>
        <item name="android:statusBarColor">@color/transparent</item>


    </style>

    <style name="tool_bar" parent="Theme.Sky">
        <item name="contentScrim">@color/light</item>
        <item name="background">@color/light</item>
    </style>

    <style name="Theme.Sky.Setting" parent="Theme.Sky">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="paddingStart">15dp</item>
        <item name="paddingEnd">15dp</item>
    </style>

    <style name="menu_container" parent="Theme.Sky">
        <item name="background">@color/background_light</item>
    </style>

    <style name="menu_button" parent="Theme.Sky">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">20sp</item>
        <item name="backgroundTint">@color/light</item>
        <item name="android:background">@color/light</item>
    </style>

    <style name="weather_icon" parent="Theme.Sky">
        <item name="android:fillColor">@color/dark</item>
        <item name="android:strokeColor">@color/dark</item>
    </style>
</resources>